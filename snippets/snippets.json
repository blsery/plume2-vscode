{
  // Place your snippets for TypeScript here. Each snippet is defined under a snippet name and has a prefix, body and 
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
  // same ids are connected.
  // Example:
  "Print to console": {
    "prefix": "log",
    "body": [
      "console.log('$1');",
      "$2"
    ],
    "description": "Log output to console"
  },
  // plume2 - actor
  "actor": {
    "prefix": "actor",
    "body": [
      "import {Actor, Action, IMap} from 'plume2'",
      "",
      "export default class ${1:actorName} extends Actor {",
      "  defaultState() {",
      "    return {$2}",
      "  }",
      "}"
    ]
  },
  //store
  "store": {
    "prefix": "store",
    "body": [
      "import {Store, IOptions} from 'plume2'",
      "",
      "${1:actor}",
      "",
      "export default class AppStore extends Store {",
      "  constructor(props: IOptions) {",
      "     super(props)",
      "     if(__DEV__) {",
      "       (window as any)._store = this",
      "     }",
      "  }",
      "  ",
      "  $0",
      "}"
    ]
  },
  //QL
  "ql": {
    "prefix": "ql",
    "body": [
      "const ${1:name} = QL('${2:name}', [",
      "  ${3}",
      "])"
    ]
  },
  //DQL
  "dql": {
    "prefix": "dql",
    "body": [
      "const ${1:name} = DQL('${2:name}', [",
      "  $3",
      "])"
    ]
  },
  //StoreProvider
  "StoreProvider": {
    "prefix": "spd",
    "body": [
      "import * as React from 'react'",
      "import {StoreProvider} from 'plume2'",
      "import AppStore from './store'",
      "",
      "@StoreProvider(AppStore)",
      "export default class ${1:AppName} extends React.Component<any, any> {",
      "  render() {",
      "    return (",
      "      $0",
      "    )",
      "  }",
      "}"
    ]
  },
  "relax": {
    "prefix": "relax",
    "body": [
      "import * as React from 'react'",
      "import {Relax} from 'plume2'",
      "",
      "interface IProps {",
      "  $1",
      "}",
      "@Relax",
      "export default class ${2:name} extends React.Component<IProps, any> {",
      "  static defaultProps = {",
      "    $3",
      "  }",
      "  render() {",
      "    return (",
      "      $0",
      "    )",
      "  }",
      "}"
    ]
  },
  "PureComponent": {
    "prefix": "pure",
    "body": [
      "import * as React from 'react'",
      "",
      "export default class ${1:name} extends PureComponent<any, any> {",
      "  render() {",
      "   return (",
      "     $0",
      "   )",
      "  }",
      "}"
    ]
  },
  "componentWillReceiceProps": {
    "prefix": "cwrp",
    "body": [
      "componentWillReceiveProps(nextProps: Object) {",
      "  $0",
      "}"
    ]
  },
  "componentDidMount": {
    "prefix": "cdm",
    "body": [
      "componentDidMount() {",
      "  $0",
      "}"
    ]
  },
  "componentDidUpdate": {
    "prefix": "cdu",
    "body": [
      "componentDidUpdate() {",
      "  $0",
      "}"
    ]
  },
  "shouldComponentUpdate": {
    "prefix": "scu",
    "body": [
      "shouldComponentUpdate(nextProps: Object, nextState: Object) {",
      "  $0",
      "}"
    ]
  },
  "action": {
    "prefix": "action",
    "body": [
      "@Action(${1:msg})",
      "$(2:methodName)(state: IMap, ${3:param}) {",
      "  return state$0",
      "}"
    ]
  }
}